{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "noEmitOnError": false,
    "isolatedModules": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "ios",
    "android"
  ],
  "extends": "expo/tsconfig.base"
}
